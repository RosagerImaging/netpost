{
  "name": "netpost-crosslisting",
  "version": "1.0.0",
  "description": "Cross-platform e-commerce listing management system",
  "private": true,
  "workspaces": [
    "chrome-extension",
    "dashboard",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:extension": "npm run dev --workspace=chrome-extension",
    "dev:dashboard": "npm run dev --workspace=dashboard",
    "dev:backend": "npm run dev --workspace=backend",
    "build": "npm-run-all build:*",
    "build:extension": "npm run build --workspace=chrome-extension",
    "build:dashboard": "npm run build --workspace=dashboard",
    "build:backend": "npm run build --workspace=backend",
    "test": "npm-run-all test:*",
    "test:extension": "npm run test --workspace=chrome-extension",
    "test:dashboard": "npm run test --workspace=dashboard",
    "test:backend": "npm run test --workspace=backend",
    "lint": "npm-run-all lint:*",
    "lint:extension": "npm run lint --workspace=chrome-extension",
    "lint:dashboard": "npm run lint --workspace=dashboard",
    "lint:backend": "npm run lint --workspace=backend"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}