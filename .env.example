# NetPost Environment Configuration
# Copy this file to .env.local and fill in your actual values
# For production deployment, ensure all values are updated with real credentials

# =============================================================================
# SUPABASE CONFIGURATION (Required)
# =============================================================================
# Get these from your Supabase project dashboard: https://supabase.com/dashboard
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your-service-role-key-here

# =============================================================================
# DATABASE CONFIGURATION (Required)
# =============================================================================
# PostgreSQL connection string from Supabase
DATABASE_URL=postgresql://postgres:your-password@db.your-project-id.supabase.co:5432/postgres

# =============================================================================
# AUTHENTICATION (Required)
# =============================================================================
# Generate a secure random string (32+ characters) for JWT signing
# Use: openssl rand -base64 32
JWT_SECRET=your-super-secure-jwt-secret-key-change-in-production-min-32-chars

# =============================================================================
# STRIPE PAYMENT PROCESSING (Required for billing)
# =============================================================================
# Get these from your Stripe dashboard: https://dashboard.stripe.com/apikeys
# Use test keys for development (sk_test_...) and live keys for production (sk_live_...)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_from_stripe_dashboard

# =============================================================================
# AI SERVICES (Required for SEO optimization)
# =============================================================================
# OpenAI API key for SEO content analysis and optimization
OPENAI_API_KEY=sk-your-openai-api-key-here

# Alternative: Anthropic API key (if using Claude instead of OpenAI)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# =============================================================================
# PLATFORM INTEGRATIONS (Required for cross-listing)
# =============================================================================
# eBay Developer Account API keys: https://developer.ebay.com/
EBAY_CLIENT_ID=your-ebay-client-id-here
EBAY_CLIENT_SECRET=your-ebay-client-secret-here
EBAY_REDIRECT_URI=https://your-production-domain.com/auth/ebay/callback

# For eBay production environment
EBAY_APP_ID=your-ebay-app-id
EBAY_CERT_ID=your-ebay-cert-id  
EBAY_DEV_ID=your-ebay-dev-id
EBAY_USER_TOKEN=your-ebay-user-token

# =============================================================================
# SECURITY & ENCRYPTION (Required)
# =============================================================================
# 32-character encryption key for storing sensitive platform credentials
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your-32-character-encryption-key-for-platform-credentials
PLATFORM_CREDENTIALS_ENCRYPTION_KEY=your-32-character-encryption-key-for-platform-credentials

# =============================================================================
# APPLICATION CONFIGURATION (Required)
# =============================================================================
# Update these URLs for your production deployment
# For production: https://your-domain.com (no trailing slash)
# For development: http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# CORS Configuration (Optional)
# Comma-separated list of additional allowed origins for CORS
# Example: https://your-custom-domain.com,https://staging.your-domain.com
CORS_ALLOWED_ORIGINS=

# Chrome Extension ID (get from Chrome Web Store after publishing)
NEXT_PUBLIC_CHROME_EXTENSION_ID=your-published-chrome-extension-id
CHROME_EXTENSION_ID=your-published-chrome-extension-id

# =============================================================================
# EMAIL CONFIGURATION (Optional but recommended)
# =============================================================================
# SMTP settings for transactional emails (SendGrid, AWS SES, etc.)
EMAIL_FROM=noreply@netpost.app
EMAIL_SMTP_HOST=smtp.sendgrid.net
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=apikey
EMAIL_SMTP_PASSWORD=your-sendgrid-api-key-here

# Alternative SMTP configuration
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Environment setting - use 'production' for live deployment
NODE_ENV=development

# Vercel deployment tokens (if deploying to Vercel)
VERCEL_TOKEN=your-vercel-token-here
VERCEL_PROJECT_ID=your-vercel-project-id
VERCEL_PROJECT_NAME=netpost
VERCEL_TEAM_ID=your-vercel-team-id
VERCEL_ORG_ID=your-vercel-org-id